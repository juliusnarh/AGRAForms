<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.FormsFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/declaration_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/dosis_extrabold"
                    android:padding="5dp"
                    android:text="@string/data_tools"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_large" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/seed_production"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/form_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/seedimage"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_seed"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:padding="5dp"
                            android:text="@string/form1"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fertilizer_blends"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/form_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/blendsimg"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_fertilizer"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:padding="5dp"
                            android:text="@string/form2"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/extension_events"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/form_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/extensionimg"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_extension"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:padding="5dp"
                            android:text="@string/form3"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/enterprises"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/form_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/enterprisesimg"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_enterprise"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/form4"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/aggregation_centres"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/form_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/aggregationimg"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_enterprise"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:padding="5dp"
                            android:text="@string/form5"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/training"
                        android:layout_width="0dp"
                        android:layout_height="300dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/form_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/trainingimg"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_training"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/form6"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>